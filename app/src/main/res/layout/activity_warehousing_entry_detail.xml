<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >

    <include layout="@layout/common_title"></include>

    <TextView
        android:id="@+id/tv_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提交"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_478dee_bg_4"
        android:textColor="@color/color_ffffff"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_gravity="center_vertical"
        ></TextView>

    <androidx.core.widget.NestedScrollView
        android:layout_below="@+id/rl_common_title"
        android:layout_above="@+id/tv_sure"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:descendantFocusability="beforeDescendants"
                android:layout_height="54dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="扫描条码："
                    android:textColor="@color/color_2a303c"
                    android:textSize="14sp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    ></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/shape_f5f7fa_bg_4"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20dp"
                    >

                    <EditText
                        android:id="@+id/et_scam"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请扫描条码"
                        android:maxLines="1"
                        android:imeOptions="actionDone"
                        android:singleLine="true"
                        android:inputType="text"
                        android:textColor="@color/color_2a303c"
                        android:textSize="14sp"
                        android:paddingLeft="15dp"
                        android:layout_gravity="center_vertical"
                        ></EditText>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/sj_down_gray"
                        android:layout_marginRight="10dp"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical"
                        ></ImageView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:layout_height="54dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="条码：         "
                    android:textColor="@color/color_2a303c"
                    android:textSize="14sp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    ></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/shape_f5f7fa_bg_4"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="SKU001"
                        android:textColor="@color/color_2a303c"
                        android:textSize="14sp"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center_vertical"
                        ></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_478dee_bg_4"
                        android:text="下一个"
                        android:textSize="14sp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textColor="@color/color_ffffff"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center_vertical"
                        ></TextView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="54dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="建议储位："
                    android:textColor="@color/color_2a303c"
                    android:textSize="14sp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    ></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/shape_f5f7fa_bg_4"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="CW001"
                        android:textColor="@color/color_2a303c"
                        android:textSize="14sp"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center_vertical"
                        ></TextView>



                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="54dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text="数量：         "
                    android:textColor="@color/color_2a303c"
                    android:textSize="14sp"></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/shape_f5f7fa_bg_4"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="0"
                        android:textColor="@color/color_2a303c"
                        android:textSize="14sp"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center_vertical"
                        ></TextView>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_more"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="54dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:text="整单总件数："
                        android:textColor="@color/color_2a303c"
                        android:textSize="14sp"></TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@drawable/shape_f5f7fa_bg_4"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="20dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="0"
                            android:textColor="@color/color_2a303c"
                            android:textSize="14sp"
                            android:layout_marginLeft="15dp"
                            android:layout_gravity="center_vertical"
                            ></TextView>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="54dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:text="整单总款数："
                        android:textColor="@color/color_2a303c"
                        android:textSize="14sp"></TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@drawable/shape_f5f7fa_bg_4"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="20dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="0"
                            android:textColor="@color/color_2a303c"
                            android:textSize="14sp"
                            android:layout_marginLeft="15dp"
                            android:layout_gravity="center_vertical"
                            ></TextView>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="54dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:text="备注：             "
                        android:textColor="@color/color_2a303c"
                        android:textSize="14sp"></TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@drawable/shape_f5f7fa_bg_4"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="20dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="0"
                            android:textColor="@color/color_2a303c"
                            android:textSize="14sp"
                            android:layout_marginLeft="15dp"
                            android:layout_gravity="center_vertical"
                            ></TextView>


                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/ic_launcher"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    ></ImageView>

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/rl_expand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@drawable/shape_478dee_empty_4"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"

                >

                <TextView
                    android:id="@+id/tv_expand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更多信息"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/color_478DFE"
                    android:textSize="14sp"
                    android:layout_centerInParent="true"
                    android:drawableRight="@drawable/sj_down_blue"
                    android:drawablePadding="5dp"
                    ></TextView>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:text="商品信息"
                    android:textColor="@color/color_2a303c"
                    android:textSize="16sp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text="总单据数量：0"
                    android:visibility="gone"
                    android:textColor="@color/color_2a303c"
                    android:textSize="14sp"></TextView>

                <TextView
                    android:id="@+id/tv_zsmsl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="上架数量总和：0"
                    android:textColor="@color/color_2a303c"
                    android:textSize="14sp"></TextView>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rc_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>