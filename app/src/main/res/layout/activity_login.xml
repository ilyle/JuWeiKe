<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_478DFE">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        ></TextView>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        android:layout_gravity="center_horizontal"
        ></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_ffffff"
        android:text="账号"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="40dp"
        ></TextView>


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="44dp"
           android:layout_marginLeft="43dp"
           android:layout_marginRight="43dp"
           android:layout_marginTop="10dp"
           android:background="@drawable/shape_ffffff_bg_4"
           >

         <!--  <org.angmarch.views.NiceSpinner
               android:id="@+id/nice_spinner"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="@color/color_ffffff"
               android:layout_weight="1"
               app:arrowDrawable="@drawable/arrow_down_gray"
               app:arrowTint="@color/color_2a303c"
               app:textTint="@color/color_999999"
            />-->

           <EditText
               android:id="@+id/et_account"
               android:layout_width="match_parent"
               android:layout_height="44dp"
               android:textColor="@color/color_2a303c"
               android:paddingLeft="16dp"
               android:maxLines="1"
               android:text="zl"
               android:textSize="14sp"
               android:layout_weight="1"
               android:imeOptions="actionDone"
               android:singleLine="true"
               android:inputType="text"
               android:textColorHint="@color/color_999999"
               android:hint="请输入账号"
               android:background="@drawable/shape_ffffff_bg_4"
               ></EditText>


           <ImageView
               android:id="@+id/iv_choose"
               android:layout_width="48dp"
               android:layout_height="match_parent"
               android:src="@drawable/arrow_down_gray"
               android:layout_alignParentRight="true"
               android:padding="15dp"
               ></ImageView>

       </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_ffffff"
        android:text="密码"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="30dp"
        ></TextView>

    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="43dp"
        android:layout_marginRight="43dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/color_2a303c"
        android:paddingLeft="16dp"
        android:maxLines="1"
        android:text="kbzl880925"
        android:textSize="14sp"
        android:inputType="textPassword"
        android:textColorHint="@color/color_999999"
        android:hint="请输入密码"
        android:background="@drawable/shape_ffffff_bg_4"
        ></EditText>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="48dp"
          android:layout_marginLeft="43dp"
          android:layout_marginRight="43dp"
          android:orientation="horizontal"
          >

          <LinearLayout
              android:id="@+id/ll_jzzh"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:layout_gravity="center_vertical"
              >

              <ImageView
                  android:id="@+id/iv_jzzh"
                  android:layout_width="20dp"
                  android:layout_height="20dp"
                  android:src="@drawable/img_uncheck"
                  android:layout_gravity="center_vertical"
                  ></ImageView>

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="是否记住账号"
                  android:textSize="14sp"
                  android:textColor="@color/color_ffffff"
                  android:layout_gravity="center_vertical"
                  android:layout_marginLeft="6dp"
                  ></TextView>

          </LinearLayout>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              ></TextView>

          <LinearLayout
              android:id="@+id/ll_jzmm"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:layout_gravity="center_vertical"
              >
              <ImageView
                  android:id="@+id/iv_jzmm"
                  android:layout_width="20dp"
                  android:layout_height="20dp"
                  android:src="@drawable/img_uncheck"
                  android:layout_gravity="center_vertical"
                  ></ImageView>

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="是否记住密码"
                  android:textSize="14sp"
                  android:textColor="@color/color_ffffff"
                  android:layout_gravity="center_vertical"
                  android:layout_marginLeft="6dp"
                  ></TextView>

          </LinearLayout>


      </LinearLayout>


    <TextView
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="43dp"
        android:layout_marginRight="43dp"
        android:layout_marginTop="46dp"
        android:text="登录"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/color_478DFE"
        android:textSize="16sp"
        android:background="@drawable/shape_ffffff_bg_4"
        ></TextView>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        ></TextView>

    <TextView
        android:id="@+id/tv_xtsz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="系统设置"
        android:textColor="@color/color_ffffff"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        android:layout_gravity="center_horizontal"
        ></TextView>

</LinearLayout>